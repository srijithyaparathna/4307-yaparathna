pipeline {
    agent any
    
    stages {
        stage('SCM Checkout') {
            steps {
                retry(3) {
                    git branch: 'main', url: 'git@github.com:srijithyaparathna/4307-yaparathna.git'
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t srijith1998/nodeapp-cuban:${BUILD_NUMBER} .'
            }
        }
        stage('Login to Docker Hub') {
            steps {


                    withCredentials([string(credentialsId: 'srijith', variable: 'srijith')]) {

                            sh "docker login -u srijith1998 -p '${srijith}'"

                }

    
                
            }
        }
        stage('Push Image') {
            steps {
                sh 'docker push srijith1998/nodeapp-cuban:${BUILD_NUMBER}'
            }
        }
    }
    post {
        always {
            sh 'docker logout'
        }
    }
}
